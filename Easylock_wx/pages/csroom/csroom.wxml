<view class="form">

<view style="text-align: center;color: #000000;font-size: 22px;font-weight: bold;height: 5px;">
<view >房间号：{{roomnum}}</view>
<view style="font-size: 17px;" >地址：{{location}}</view>
<van-tag type="success" size="large">{{standard}}</van-tag>
</view>
<van-button type="primary" disabled="{{ready==1?false:true}}"round icon="lock" bind:click="unlock">{{ready==1?'立即开门':'钥匙未生效'}}</van-button>
<view style="font-size: 13px;" >房东寄语:{{jieshao}}</view>
<view style="width: 100%;height: 200px;">
  <van-grid column-num="3" >
  <van-grid-item  text="请求续住" icon="clock-o" bindtap="prolonglive" />
  <van-grid-item  text="请求服务" icon="smile-o"  />
  
</van-grid>
</view>

</view>
<van-toast id="van-toast" />
<van-dialog id="van-dialog" />
